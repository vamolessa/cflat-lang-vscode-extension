{
	"name": "cflat",
	"displayName": "cflat",
	"description": "CFLat Language Integration",
	"version": "0.0.1",
	"publisher": "matheuslessa",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Programming Languages",
		"Debuggers"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/cflat-lang/vscode.git"
	},
	"bugs": {
		"url": "https://github.com/cflat-lang/vscode/issues"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"test": "mocha -u tdd ./out/tests/",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"dependencies": {
		"await-notify": "1.0.1",
		"vscode-debugadapter": "1.37.0"
	},
	"devDependencies": {
		"@types/node": "10.12.12",
		"@types/mocha": "5.2.7",
		"typescript": "3.5.3",
		"mocha": "10.2.0",
		"vscode": "1.1.36",
		"vscode-debugadapter-testsupport": "1.37.0",
		"tslint": "5.18.0",
		"vsce": "1.66.0"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug"
	],
	"contributes": {
		"languages": [
			{
				"id": "cflat",
				"aliases": [
					"Cb",
					"CFlat"
				],
				"extensions": [
					".cb"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "cflat",
				"scopeName": "source.cb",
				"path": "./syntaxes/cflat.tmLanguage.json"
			}
		],
		"breakpoints": [
			{
				"language": "cflat"
			}
		],
		"debuggers": [
			{
				"type": "cflat",
				"label": "CFlat Debugger",
				"program": "./out/CFlatAdapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"url"
						],
						"properties": {
							"url": {
								"type": "string",
								"description": "Command to invoke the debugger (cbd)",
								"default": "http://localhost:4747"
							},
							"pollInterval": {
								"type": "number",
								"description": "Interval between server polls in milliseconds",
								"default": 1000
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "cflat",
						"name": "CFlat Debugger",
						"request": "launch",
						"url": "http://localhost:4747",
						"pollInterval": 1000
					}
				],
				"configurationSnippets": [
					{
						"label": "CFlat Debug: Launch",
						"description": "A new configuration for cflat debugging",
						"body": {
							"type": "cflat",
							"name": "CFlat Debugger",
							"request": "launch",
							"url": "http://localhost:4747",
							"pollInterval": 1000
						}
					}
				]
			}
		]
	}
}